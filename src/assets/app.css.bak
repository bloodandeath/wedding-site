 /* Theme (sage + silver/gray) */
.page {
    --bg: #d5f4df;
    --panel: rgba(222, 231, 221, 0.72);
    --panel-2: #f6f7f5;
    --sage: #20633f;
    --sage-2: #a7b6a6;
    --dark-sage-1: #50784d;
    --dark-sage-2: #476a45;
    --dark-sage-3: #3e5d3c;
    --dark-sage-4: #355034;
    --dark-sage-5: #2d432b;
    --dark-sage-6: #243522;
    --dark-sage-7: #1b281a;
    --dark-sage-8: #121b11;
    --dark-sage-9: #090d09;
    --light-sage-1: #6a9167;
    --light-sage-2: #7a9d78;
    --light-sage-3: #8baa89;
    --light-sage-4: #9bb69a;
    --light-sage-5: #acc2ab;
    --light-sage-6: #bdcebb;
    --light-sage-7: #cddacc;
    --light-sage-8: #dee7dd;
    --light-sage-9: #eef3ee;
    --pastel-sage-1: #64cc94;
    --pastel-sage-2: #8decb4;
    --light-pastel-sage-2: #aaffcc;
    --pastel-sage-3: #20633f;
    --pastel-sage-4: #5ea37e;
    --pastel-sage-5: #a9cca8;
    --pastel-sage-6: #5b5f54;
    --ink: #1c1f1c;
    --muted: #333733;
    --line: rgba(28, 31, 28, 0.15);
    --shadow: 0 12px 40px rgba(0, 0, 0, 0.08);

    background: radial-gradient(1200px 600px at 20% -10%, rgba(123, 143, 122, 0.12), transparent 60%),
    radial-gradient(900px 600px at 110% 10%, rgba(167, 182, 166, 0.12), transparent 60%),
    var(--bg);
    color: var(--ink);
    min-height: 100vh;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji",
    "Segoe UI Emoji";
}

.container {
    width: min(1100px, calc(100% - 2rem));
    margin: 0 auto;
}


/* =========================
   Sparkly Particle Wisps (Vue-rendered)
   ========================= */

.wisps {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;

    /* subtle base haze behind particles */
    background:
            radial-gradient(900px 520px at 25% 15%, rgba(32, 99, 63, 0.10), transparent 60%),
            radial-gradient(900px 520px at 80% 35%, rgba(100, 204, 148, 0.08), transparent 60%);
}

/* Ensure content sits above wisps, but DON'T mess with fixed elements */
.page {
    position: relative;
    z-index: 1;
}

/* The particles */
.wisp {
    position: absolute;
    left: var(--x);
    top: calc(var(--y) + (var(--scrollY, 0px) * var(--d)));

    width: var(--s);
    height: var(--s);
    border-radius: 999px;

    /* sparkly look: hot center + colored glow */
    background:
            radial-gradient(circle at 35% 35%, rgba(255,255,255,0.90), rgba(255,255,255,0.25) 35%, transparent 70%),
            radial-gradient(circle at 50% 50%, var(--c), transparent 70%);

    opacity: 0.9;

    /* darker, more noticeable glow */
    box-shadow:
            0 0 calc(10px * var(--g)) rgba(32, 99, 63, 0.22),
            0 0 calc(18px * var(--g)) rgba(32, 99, 63, 0.38);

    transform: translate3d(0, 0, 0);
    will-change: transform, opacity, top;

    animation:
            sparkleFloat var(--dur) ease-in-out infinite alternate,
            sparkleTwinkle var(--tw) ease-in-out infinite;

    animation-delay: var(--delay), var(--twDelay);
}

/* occasional flare halo */
.wisp::before {
    content: "";
    position: absolute;
    inset: -250%;
    border-radius: 999px;
    background: radial-gradient(circle, rgba(255,255,255,0.55), transparent 65%);
    opacity: 0;
}

.wisp:nth-child(4n)::before {
    animation: sparkleFlare var(--tw) ease-in-out infinite;
    animation-delay: var(--twDelay);
}

@keyframes sparkleFloat {
    from { transform: translate3d(calc(var(--dx) * -1), calc(var(--dy) * -1), 0); }
    to   { transform: translate3d(var(--dx), var(--dy), 0); }
}

@keyframes sparkleTwinkle {
    0%, 100% { opacity: 0.22; filter: blur(0px); }
    40%      { opacity: 0.75; filter: blur(0.15px); }
    55%      { opacity: 1;    filter: blur(0.25px); }
    70%      { opacity: 0.55; filter: blur(0.12px); }
}

@keyframes sparkleFlare {
    0%, 78%, 100% { opacity: 0; transform: scale(0.85); }
    86%           { opacity: 0.35; transform: scale(1.10); }
    92%           { opacity: 0.12; transform: scale(0.95); }
}


/* =========================
         Nav Container
   ========================= */
.nav {
    position: fixed;
    top: 16px;
    right: 16px; /* move to right by swapping to right:16px; left:auto; */
    left: auto;
    z-index: 999;

    display: inline-flex;
    align-items: flex-start;
    flex-direction: row-reverse;
    gap: 10px;
}

/* ---- ORB WRAPPER (for glow) ---- */
.nav-orb {
    --orb-y: -2px;
    transform: translate3d(0, var(--orb-y), 0);
    will-change: transform;
    transition: transform 220ms ease;

    position: relative;
    display: inline-grid;
    place-items: center;
    align-self: flex-start;
}

/* ---- SOFT SAGE GLOW ---- */
.nav-orb::before {
    content: "";
    position: absolute;
    inset: -14px;
    border-radius: 999px;

    background: radial-gradient(
            closest-side,
            rgba(123, 143, 122, 0.35),
            rgba(123, 143, 122, 0.12),
            transparent 70%
    );

    filter: blur(6px);
    opacity: 0.65;
    transform: scale(0.92);
    transition: opacity 0.25s ease, transform 0.25s ease;
    pointer-events: none;
}

/* Hover / open intensifies glow */
.nav-orb:has(.brand--toggle:hover)::before,
.nav-orb:has(.brand--toggle[aria-expanded="true"])::before {
    opacity: 0.95;
    transform: scale(1.03);
}

/* ---- LOGO BUTTON RESET ---- */
.brand--toggle {
    all: unset;
    cursor: pointer;

    display: inline-flex;
    align-items: center;
    justify-content: center;
}

/* ---- CIRCULAR CREST BADGE ---- */
.brand-mark {
    width: 44px;
    height: 44px;
    border-radius: 50%;

    display: grid;
    place-items: center;
    overflow: hidden;

    background: rgba(255, 255, 255, 0.55);
    backdrop-filter: blur(14px);

    border: 1px solid rgba(28, 31, 28, 0.14);
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.16);

    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* Crest hover / open state */
.brand--toggle:hover .brand-mark {
    transform: translateY(-1px);
    box-shadow: 0 18px 48px rgba(0, 0, 0, 0.18);
}

.brand--toggle[aria-expanded="true"] .brand-mark {
    transform: rotate(-6deg);
}

/* ---- SVG SIZING ---- */
.brand-mark__svg {
    width: 125%;
    height: 125%;
    display: block;
}

.brand-mark__svg svg {
    width: 100%;
    height: 100%;
    display: block;
}

/* ======================================================
   EXPANDED MENU: Drawer slide + bloom
   ====================================================== */

.nav-links--expanded {
    position: relative;

    display: flex;
    align-items: center;
    gap: 0.75rem;

    /* Padding is on the CONTENT; the sliding “drawer” is ::after */
    padding: 0.55rem 0.75rem;

    white-space: nowrap;

    /* This keeps pseudo-elements layered correctly behind links */
    isolation: isolate;
    overflow: visible;

    /* Desktop drawer expands LEFT from the orb */
    transform-origin: 100% 50%;
}

/* The sliding drawer background (this is the “container background” you wanted) */
.nav-links--expanded::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 999px;

    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(3px);
    border: 1px solid rgba(28, 31, 28, 0.14);
    box-shadow: 0 18px 52px rgba(0, 0, 0, 0.18);

    z-index: -1;

    /* start collapsed like a drawer tucked behind the orb */
    transform-origin: 100% 50%;
    transform: scaleX(0.18);
    opacity: 0;

    transition:
            transform 280ms cubic-bezier(0.16, 1, 0.3, 1),
            opacity 180ms ease;
}

/* Subtle bloom halo behind menu */
.nav-links--expanded::before {
    content: "";
    position: absolute;
    inset: -10px;
    border-radius: 999px;

    background: radial-gradient(
            closest-side,
            rgba(123, 143, 122, 0.18),
            transparent 65%
    );

    filter: blur(10px);
    opacity: 0.55;
    pointer-events: none;

    /* behind the drawer bg */
    z-index: -2;
}

/* Ensure all menu items sit above pseudo elements */
.nav-links--expanded > * {
    position: relative;
    z-index: 1;
}

/* ---- MENU LINKS ---- */
.nav-links--expanded a {
    text-decoration: none;
    color: var(--muted);
    font-size: 0.95rem;
}

.nav-links--expanded a:hover {
    color: var(--ink);
}

/* RSVP button alignment */
.nav-links--expanded .btn {
    margin-left: 0.15rem;
}

/* ======================================================
   BLOOM ANIMATION (the menu element itself)
   ====================================================== */

.nav-reveal-enter-active {
    transition:
            opacity 220ms ease,
            transform 260ms cubic-bezier(0.16, 1, 0.3, 1);
}

.nav-reveal-leave-active {
    transition:
            opacity 160ms ease,
            transform 180ms ease;
}

.nav-reveal-enter-from {
    opacity: 0;
    transform: translateY(-6px) scale(0.72);
}

/* When navOpen is true, slide the drawer OUT (open) */
.nav--open .nav-links--expanded::after {
    transform: scaleX(1);
    opacity: 1;
}

.nav-reveal-leave-to {
    opacity: 0;
    transform: translateY(-4px) scale(0.92);
}

.nav--right.nav--open .nav-links--expanded::after,
.nav--right .nav-links--expanded::after {
    transform-origin: 100% 50%;
}

/* ======================================================
   STAGGERED LINK FADE
   ====================================================== */

.nav-links--expanded a,
.nav-links--expanded .btn {
    animation: navItemIn 260ms ease both;
}

.nav-links--expanded a:nth-child(1) { animation-delay: 170ms; }
.nav-links--expanded a:nth-child(2) { animation-delay: 145ms; }
.nav-links--expanded a:nth-child(3) { animation-delay: 120ms; }
.nav-links--expanded a:nth-child(4) { animation-delay: 95ms; }
.nav-links--expanded a:nth-child(5) { animation-delay: 70ms; }
.nav-links--expanded a:nth-child(6) { animation-delay: 45ms; }
.nav-links--expanded a:nth-child(7) { animation-delay: 20ms; }

@keyframes navItemIn {
    from { opacity: 0; transform: translateY(-4px); }
    to   { opacity: 1; transform: translateY(0); }
}

/* =========================
   NAV – Scroll Awareness
   ========================= */

.nav {
    transition: transform 220ms ease;
}

.nav--scrolling .nav-orb {
    --orb-y: -1px;
}

.nav--scrolling .nav-orb::before {
    opacity: 0.85;
    transform: scale(0.96);
}

/* ====================
   Hero - Landing Page
   ==================== */
.hero {
    position: relative;
    overflow: hidden;
    padding-bottom: 5.6rem;
}

.hero-content {
    padding: 5.2rem 0 5.6rem;
    text-align: center;
}

.eyebrow {
    color: var(--dark-sage-4);
    letter-spacing: 0.18em;
    text-transform: uppercase;
    font-size: 0.8rem;
    margin: 0 0 0.75rem;
}

.title {
    font-size: clamp(2.2rem, 5vw, 3.4rem);
    line-height: 1.05;
    margin: 0;
}

.subtitle {
    margin: 0.8rem 0 1.6rem;
    color: var(--muted);
}

.countdown {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.75rem;
    width: min(640px, 100%);
    margin: 0.6rem auto 1.4rem;
}

.cd-item {
    background: rgba(255, 255, 255, 0.55);
    border: 1px solid var(--line);
    border-radius: 18px;
    padding: 0.85rem 0.8rem;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.05);
}

.cd-num {
    font-size: 1.6rem;
    font-weight: 750;
    color: var(--ink);
}

.cd-label {
    font-size: 0.8rem;
    color: var(--muted);
    margin-top: 0.1rem;
}

.cta-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 0.9rem;
}

.note {
    margin: 0.5rem 0 0;
    color: var(--muted);
    font-size: 0.95rem;
}

/* =========================
   Scroll Cue (Hero)
   ========================= */
.scroll-cue {
    position: absolute;
    left: 50%;
    bottom: 18px;
    transform: translateX(-50%);
    z-index: 3;

    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;

    text-decoration: none;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
}

.scroll-cue__line {
    width: 1px;
    height: 26px;
    background: rgba(32, 99, 63, 0.35); /* sage */
    border-radius: 999px;
}

.scroll-cue__dot {
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: rgba(32, 99, 63, 0.55);
    box-shadow: 0 0 0 6px rgba(32, 99, 63, 0.10);
}

.scroll-cue__text {
    font-size: 0.72rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: rgba(32, 99, 63, 0.55);
}

/* Gentle pulse */
.scroll-cue {
    animation: scrollCuePulse 2.2s ease-in-out infinite;
}

@keyframes scrollCuePulse {
    0%, 100% { opacity: 0.75; transform: translateX(-50%) translateY(0); }
    50%      { opacity: 1;    transform: translateX(-50%) translateY(-3px); }
}

.hero-glow {
    position: absolute;
    inset: -60px -40px auto -40px;
    height: 260px;
    background: radial-gradient(closest-side, rgba(123, 143, 122, 0.22), transparent 70%);
    pointer-events: none;
    filter: blur(2px);
}

/* Sections */
.section {
    position: relative;
    padding: 3.2rem 0;
}

.section--alt {
    background: linear-gradient(180deg, rgba(246, 247, 245, 0.38), rgba(246, 247, 245, 0.20));
    border-top: 1px solid var(--line);
    border-bottom: 1px solid var(--line);
}

/* Soft fade at the bottom of each section */
.section::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -1px;

    height: 48px;

    background: radial-gradient(
            60% 100% at 50% 100%,
            rgba(123, 143, 122, 0.14),
            transparent 70%
    );

    pointer-events: none;
}

/* Reduce intensity on alternate (alt) sections */
.section--alt::after {
    background: radial-gradient(
            60% 100% at 50% 100%,
            rgba(123, 143, 122, 0.08),
            transparent 70%
    );
}

/* Don't show a separator on the last section (FAQ) */
.section:last-of-type::after {
    display: none;
}

.h2 {
    font-size: 1.65rem;
    margin: 0 0 1rem;
}

.h3 {
    font-size: 1.05rem;
    margin: 0 0 0.55rem;
}

.lead {
    font-size: 1.05rem;
    color: var(--muted);
    margin: 0 0 0.9rem;
}

.text {
    margin: 0.5rem 0 0;
    color: var(--muted);
    line-height: 1.6;
}

/* Grid + cards */
.grid {
    display: grid;
    gap: 1rem;
}

.grid--2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
}

.grid--3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
}

.card {
    background: var(--panel);
    border: 1px solid var(--line);
    border-radius: 22px;
    padding: 1.15rem;
    box-shadow: var(--shadow);
}

.photo-card {
    padding: 0.9rem;
}

.photo {
    height: 280px;
    border-radius: 18px;
    background:
            radial-gradient(700px 220px at 30% 10%, rgba(123, 143, 122, 0.18), transparent 55%),
            radial-gradient(520px 240px at 80% 70%, rgba(167, 182, 166, 0.20), transparent 60%),
            linear-gradient(145deg, rgba(0, 0, 0, 0.04), rgba(0, 0, 0, 0.01));
    border: 1px dashed rgba(123, 143, 122, 0.35);
}

.photo-meta {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 0.75rem;
    padding: 0.75rem 0.25rem 0.15rem;
}

.mono {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    color: var(--pastel-sage-3);
    font-weight: 650;
}

.muted {
    color: var(--muted);
}

.list {
    margin: 0.5rem 0 0;
    padding-left: 1.2rem;
    color: var(--muted);
}

.link {
    color: var(--pastel-sage-3);
    text-decoration: none;
    font-weight: 650;
}

.link:hover {
    text-decoration: underline;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 1.05rem;
    border-radius: 999px;
    border: 1px solid rgba(123, 143, 122, 0.38);
    background: linear-gradient(145deg, rgba(123, 143, 122, 0.9), rgba(123, 143, 122, 0.72));
    color: white;
    text-decoration: none;
    font-weight: 700;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
}

.btn:hover {
    filter: brightness(1.03);
}

.btn--ghost {
    background: rgba(255, 255, 255, 0.7);
    color: var(--ink);
    border: 1px solid var(--line);
}

.btn--small {
    padding: 0.55rem 0.85rem;
    font-size: 0.95rem;
}

.btn--full {
    width: 100%;
}

/* Timeline */
.timeline {
    display: grid;
    gap: 0.85rem;
    margin-top: 1rem;
}

.timeline-item {
    display: grid;
    grid-template-columns: 18px 1fr;
    align-items: start;
    gap: 0.85rem;
}

.dot {
    width: 12px;
    height: 12px;
    border-radius: 999px;
    margin-top: 1.1rem;
    background: rgba(123, 143, 122, 0.9);
    box-shadow: 0 0 0 6px rgba(123, 143, 122, 0.12);
}

.timeline-content .row {
    display: flex;
    gap: 0.85rem;
    align-items: baseline;
    justify-content: space-between;
}

.time {
    font-weight: 750;
    color: var(--ink);
}

.label {
    color: var(--muted);
    font-weight: 650;
}


/* =========================
   Registry Carousel
   ========================= */
.registry-head {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
}

.registry-amazon {
    white-space: nowrap;
}

/* Horizontal scroll carousel */
.reg-carousel {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: minmax(220px, 280px);
    gap: 0.9rem;

    overflow-x: auto;
    overflow-y: hidden;
    padding: 0.25rem 0.25rem 0.75rem;

    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;

    /* nicer scrollbar */
    scrollbar-width: thin;
}

/* WebKit scrollbar (optional) */
.reg-carousel::-webkit-scrollbar {
    height: 10px;
}
.reg-carousel::-webkit-scrollbar-thumb {
    background: rgba(28, 31, 28, 0.18);
    border-radius: 999px;
}
.reg-carousel::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.25);
    border-radius: 999px;
}

.reg-card {
    scroll-snap-align: start;
    text-decoration: none;
    color: inherit;

    background: rgba(255, 255, 255, 0.72);
    border: 1px solid rgba(28, 31, 28, 0.14);
    border-radius: 22px;
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.10);

    overflow: hidden;
    display: flex;
    flex-direction: column;

    transition: transform 140ms ease, box-shadow 180ms ease;
}

.reg-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 52px rgba(0, 0, 0, 0.14);
}

.reg-img {
    aspect-ratio: 4 / 3;
    background: rgba(255, 255, 255, 0.45);
    display: grid;
    place-items: center;
}

.reg-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.reg-body {
    padding: 0.9rem 0.95rem 1rem;
    display: grid;
    gap: 0.35rem;
}

.reg-title {
    font-weight: 800;
    color: var(--ink);
    line-height: 1.2;
}

.reg-note {
    line-height: 1.45;
}

.reg-meta {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 0.75rem;
    margin-top: 0.25rem;
}

.reg-price {
    font-weight: 800;
    color: var(--ink);
}

.reg-cta {
    font-weight: 750;
    color: var(--pastel-sage-3);
    white-space: nowrap;
}

.registry-footnote {
    margin-top: 0.65rem;
    font-size: 0.92rem;
}


/* ======================================================
   FAQ
   ====================================================== */
.faq {
    position: relative;
    padding: 1.15rem 1.25rem;

    background: var(--panel);
    border: 1px solid var(--line);
    border-radius: 22px;

    box-shadow: var(--shadow);

    transition:
            border-color 260ms ease,
            box-shadow 360ms ease,
            background-color 260ms ease;
}

/* ---------- Summary button ---------- */
.faq-summary {
    all: unset;
    cursor: pointer;

    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;

    width: 100%;
    font-weight: 750;
    color: var(--ink);
}

/* ---------- Plus / Minus icon ---------- */
.faq-icon {
    position: relative;
    width: 14px;
    height: 14px;
    flex-shrink: 0;

    /* ensures true center rotation */
    transform-origin: 50% 50%;
    transition: transform 360ms cubic-bezier(0.16, 1, 0.3, 1);
}

/* horizontal bar */
.faq-icon::before,
.faq-icon::after {
    content: "";
    position: absolute;
    inset: 50% auto auto 50%;
    width: 14px;
    height: 2px;
    background: var(--muted);

    transform: translate(-50%, -50%);
    border-radius: 2px;
}

/* vertical bar */
.faq-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
}

/* open state → rotate to minus */
.faq--open .faq-icon {
    transform: rotate(180deg);
}

.faq--open .faq-icon::after {
    opacity: 0;
}

/* ---------- Answer container (NO SNAP) ---------- */
.faq-body {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 420ms cubic-bezier(0.16, 1, 0.3, 1);
}

/* inner wrapper is what actually clips */
.faq-body__inner {
    overflow: hidden;
    padding-top: 0;
    transition: padding-top 280ms ease;
}

.faq-body--open {
    grid-template-rows: 1fr;
}

.faq-body--open .faq-body__inner {
    padding-top: 0.75rem;
}

/* ---------- Open visual polish ---------- */
.faq--open {
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 18px 52px rgba(0, 0, 0, 0.12);
}


/* Footer */
.footer {
    margin-top: 0;
    padding: 1.4rem 0 1.6rem;

    /* soft separation from content */
    border-top: 1px solid rgba(28, 31, 28, 0.12);

    /* subtle glass panel */
    background:
            radial-gradient(520px 220px at 15% 0%, rgba(123, 143, 122, 0.12), transparent 65%),
            linear-gradient(180deg, rgba(255, 255, 255, 0.35), rgba(255, 255, 255, 0.20));
    backdrop-filter: blur(10px);
}

.footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
}

/* Brand block: crest + text to the right */
.footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.85rem;
    min-width: 260px;
}

/* Crest badge in footer */
.footer-mark {
    width: 42px;
    height: 42px;
    border-radius: 50%;

    display: grid;
    place-items: center;
    overflow: hidden;

    background: rgba(255, 255, 255, 0.55);
    border: 1px solid rgba(28, 31, 28, 0.14);
    box-shadow: 0 12px 34px rgba(0, 0, 0, 0.12);
}

.footer-mark__svg {
    width: 120%;
    height: 120%;
    display: block;
}

.footer-mark__svg svg {
    width: 100%;
    height: 100%;
    display: block;
}

/* Text to the right of the crest */
.footer-brand__text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
}

.footer-couple {
    font-weight: 450;
    letter-spacing: 0.02em;
    color: var(--ink);
}

.footer-sub {
    font-weight: 300;
    margin-top: 0.25rem;
    font-size: 0.92rem;
}

/* Right side meta */
.footer-meta {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.75rem;
}

/* Footer links should be subtle */
.footer .link {
    color: var(--pastel-sage-3);
    font-weight: 700;
    text-decoration: none;
}

.footer .link:hover {
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 860px) {
    /* =========================
       Layout / Sections
       ========================= */
    .grid--2,
    .grid--3 {
        grid-template-columns: 1fr;
    }

    .hero {
        padding-bottom: 6.2rem;
    }

    .hero-content {
        padding: 4.2rem 0 2.8rem;
    }

    .countdown {
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    /* =========================
       Floating Nav (Mobile)
       ========================= */
    .nav {
        position: fixed;
        top: 16px;
        right: 16px;
        left: auto;

        display: inline-flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 10px;
    }

    /* Prevent crest shifting: drawer is taken out of flex flow */
    .nav-links--expanded {
        position: absolute;
        top: calc(44px + 10px); /* crest size (44) + nav gap (10) */
        right: 0;

        width: min(82vw, 320px);

        display: flex;
        flex-direction: column;
        align-items: stretch;

        gap: 0.35rem;
        padding: 0.85rem;
        border-radius: 18px;

        /* mobile smoothness */
        isolation: isolate;
        will-change: transform, opacity;
        transform: translateZ(0);
    }

    /* Drawer background: expand DOWN */
    .nav-links--expanded::after {
        border-radius: 18px;

        transform-origin: 50% 0%;
        transform: translateZ(0) scaleY(0.18);
        opacity: 0;

        /* mobile perf: avoid heavy blur */
        backdrop-filter: none;
        background: rgba(255, 255, 255, 0.88);
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.14);

        will-change: transform, opacity;
    }

    .nav--open .nav-links--expanded::after {
        transform: translateZ(0) scaleY(1);
        opacity: 1;
    }

    /* Tap targets */
    .nav-links--expanded a,
    .nav-links--expanded .btn {
        width: 100%;
        text-align: center;
        padding: 0.62rem 0.75rem;
        border-radius: 12px;

        /* kill stagger on mobile (perf) */
        animation: none !important;
    }

    .nav-links--expanded a:hover {
        background: rgba(255, 255, 255, 0.35);
    }

    .nav-links--expanded .btn {
        margin-left: 0;
    }

    /* =========================
       Transition tuning (Mobile)
       ========================= */
    .nav-reveal-enter-active {
        transition: opacity 160ms ease, transform 200ms cubic-bezier(0.16, 1, 0.3, 1);
    }

    .nav-reveal-leave-active {
        transition: opacity 120ms ease, transform 140ms ease;
    }

    .nav-reveal-enter-from {
        transform: translateY(-6px) scale(0.96);
    }

    .nav-reveal-leave-to {
        transform: translateY(-4px) scale(0.96);
    }

    /* Slightly reduce glow cost on mobile */
    .nav-orb::before {
        filter: blur(3px);
    }
    .scroll-cue {
        bottom: 14px;
    }
    .footer-inner {
        flex-direction: column;
        align-items: stretch;
        gap: 0.9rem;
    }

    .footer-brand {
        justify-content: center;
        min-width: 0;
    }

    .footer-meta {
        justify-content: center;
    }
}